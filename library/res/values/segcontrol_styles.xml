<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:bd="http://schemas.android.com/apk/res/at.bookworm.widget.segcontrol">

    <style name="TabControl">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/tab_bar_default_height</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:stretchColumns">0</item>
        
        <item name="android:gravity">center</item>
        <item name="android:background">@null</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/tab_control</item>
        
        <item name="textAllCaps">true</item>
        
        <item name="backgroundPressed">@color/dim_holo</item>
        <item name="backgroundSelected">@null</item>
        <item name="lineColor">@color/highlight</item>
        <item name="lineHeightUnselected">1dp</item>
        <item name="lineHeightSelected">6dp</item>
    </style>
    
    <style name="SegmentedControl">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/segmented_control_default_height</item>
        <item name="android:layout_weight">1</item>
        <item name="android:minWidth">45dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:stretchColumns">0</item>
        
        <item name="android:gravity">center</item>
        <item name="android:background">@null</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/segmented_control</item>
        
        <item name="backgroundPressed">@color/dim_holo</item>
        <item name="backgroundSelected">@color/highlight</item>
        <item name="lineColor">@color/dark</item>
        <item name="lineHeightUnselected">0dp</item>
        <item name="lineHeightSelected">0dp</item>
    </style>

</resources>